<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
          package="de.zweidenker.connectivity">

    <application
        android:name="de.zweidenker.connectivity.ConnectivityApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="de.zweidenker.connectivity.LaunchActivity"
            android:launchMode="singleInstance">

        </activity>

        <activity
            android:name="de.zweidenker.connectivity.list.DeviceListActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".config.DeviceConfigActivity" />
    </application>
</manifest>
